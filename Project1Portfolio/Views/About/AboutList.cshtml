@model List<Project1Portfolio.Models.About>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Hakkımda Bilgisi</h2>

<table class="table table-bordered">
    <tr>
        <th>Id </th>
        <th>Başlık </th>
        <th>Detay </th>
        <th>Fotoğraf </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId </td>
            <td>@item.Title </td>
            <td>@item.Detail </td>
            <td>@item.ImageUrl </td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a> </td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a> </td>
        </tr>
    }
</table>
<a href="/About/CreateAbout/" class="btn btn-info">Yeni Hakkımda Bilgisi Girişi</a>
