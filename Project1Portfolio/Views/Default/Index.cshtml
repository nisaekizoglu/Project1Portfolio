@model Project1Portfolio.Models.Message
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@Html.Action("PartialHead","Default")

<body>

    
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
   
    @Html.Action("PartialNavbar", "Default")
    
    @Html.Action("PartialHeader", "Default")
    
    @Html.Action("PartialAbout", "Default")
    
    @Html.Action("PartialEducation", "Default")
    
    @Html.Action("PartialExperience","Default")
    
    @Html.Action("PartialSkill", "Default")
    
    @Html.Action("PartialService","Default")
    
    @Html.Action("PartialWork","Default")
    
    @Html.Action("PartialTestimonial","Default")
   
    <div class="container-fluid" id="pigraContact">
        <div class="container">
            <div class="row g-0">
                
                @Html.Action("PartialContactSideBar", "Contact")
                <div class="col-lg-9">
                    <div class="contact-content h-100 pt-6 ps-6 pb-6">
                        <div class="bg-light p-4">
                            <div class="row g-5">
                                @Html.Action("PartialContactAddress","Contact")
                                <div class="col-xl-7 wow fadeInUp" data-wow-delay="0.3s">
                                    <div>
                                        <form method="post">
                                            <div class="row g-3">
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control border-0" id="name" placeholder="Adınız Soyadınız" name="Name">
                                                        <label for="name">Adınız</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="email" class="form-control border-0" id="email" placeholder="Email Adresiniz" name="Email">
                                                        <label for="email">Email Adresiniz</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="phone" class="form-control border-0" id="phone" placeholder="Telefon Numarası" name="Phone">
                                                        <label for="phone">Telefon</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v, new {@class="form-control"})
                                                        
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control border-0" id="subject" placeholder="Konu Başlığı" name="Subject">
                                                        <label for="subject">Konu Başlığı</label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating">
                                                        <textarea class="form-control border-0" placeholder="Mesajınızı Buraya Yazınız." id="message" style="height: 120px" name="MessageDetail"></textarea>
                                                        <label for="message">Message</label>
                                                    </div>

                                                </div>
                                                <div class="col-12">
                                                    <button class="btn btn-primary w-100 py-3">Mesajı Gönder</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                @Html.Action("PartialContactLocation","Contact")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Action("PartialSocialMedia", "Default")

    @Html.Action("PartialScript", "Default")
</body>

</html>