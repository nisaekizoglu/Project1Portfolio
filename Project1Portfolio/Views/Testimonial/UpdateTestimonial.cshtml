@model Project1Portfolio.Models.Testimonial


@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class=" mb-4">Referans Güncelleme Sayfası</h2>
<form method="post">

    @Html.HiddenFor(x => x.TestimonialId, new { @class = "form-control" })

    <label>Referans Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Çalıştığı Yer</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Yorum</label>
    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Referansı Güncelle</button>
</form>
