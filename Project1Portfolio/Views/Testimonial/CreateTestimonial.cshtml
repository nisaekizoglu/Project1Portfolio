@model Project1Portfolio.Models.Testimonial
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class=" mb-4">Yeni Referans Girişi</h2>

<form method="post">
    <label>Referans İsmi</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Çalıştığı Yer</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Yorum</label>
    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Referansı Ekle</button>
</form>

